{
  "name": "documentation-reader-corrector",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "license": "UNLICENSED",
  "scripts": {
    "openai:test": "npm run build && node -e \"import('./src/openaiClient.js').then(m => m.testConnection()).then(()=>{console.log('Connection test succeeded')}).catch(e=>{console.error(e.message); process.exit(1)})\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsc -p tsconfig.json",
    "lint": "echo 'No linter configured'",
    "poc:langchain:correction-analysis": "npm run build && node ./examples/langchain/poc_correction_analysis.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "perf:correction": "tsx scripts/perf/run_correction_bench.ts"
  },
  "dependencies": {
    "@langchain/core": "^0.3.29",
    "@langchain/openai": "^0.3.8",
    "openai": "^5.20.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^6.0.11",
    "vitest": "^3.2.4"
  }
}
